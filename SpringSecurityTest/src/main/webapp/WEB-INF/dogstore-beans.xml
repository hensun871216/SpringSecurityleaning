<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="ipTokenBasedRememberMeServices"
		class="com.hensun.springTest.security.IPTokenBasedRememberMeServices">
			<property name="key" value="springTest"></property>
			<property name="userDetailsService" ref="userService"></property>
	</bean>
	<bean id="userService"
		class="com.hensun.springTest.security.ImMemoryChangePasswordDaoImpl">
		<property name="userProperties">
			<props>
				<prop key="guest">guest,ROLE_USER</prop>
			</props>
		</property>
	</bean>
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName">
            <value>org.mariadb.jdbc.Driver</value>
        </property>
        <property name="url">
         <value>jdbc:mariadb://127.0.0.1:3306/test?useUnicode=true&amp;characterEncoding=UTF-8&amp;zeroDateTimeBehavior=convertToNull</value>
        </property>
        <property name="username">
            <value>root</value>
        </property>
        <property name="password">
            <value>871216</value>
        </property>
    </bean>
</beans>
